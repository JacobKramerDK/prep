{
  "name": "prep",
  "version": "0.1.0",
  "description": "Desktop meeting preparation assistant that connects to Obsidian vaults and calendars",
  "main": "dist/main/src/main/index.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json && electron dist/main/src/main/index.js",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "check-swift": "swift --version || echo 'Install Xcode Command Line Tools: xcode-select --install'",
    "build:native": "cd native && ./build.sh",
    "build:native:win": "native\\build.bat",
    "prebuild": "npm run check-swift && npm run build:native && npm run validate:binary",
    "prebuild:win": "npm run build:native:win",
    "validate:binary": "test -f resources/bin/calendar-helper || (echo 'ERROR: Native binary not found after build' && exit 1)",
    "package": "npm run build && electron-builder",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:stable": "playwright test --config=playwright.config.ts --project=electron-stable",
    "test:e2e:integration": "playwright test --config=playwright.config.ts --project=electron-integration",
    "test:e2e:ui": "playwright test --ui",
    "test:helpers": "jest tests/helpers",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "meeting",
    "obsidian",
    "calendar",
    "ai",
    "productivity"
  ],
  "author": "Prep Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "@types/node-schedule": "^2.1.8",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.0.0",
    "electron": "^35.7.5",
    "electron-builder": "^25.0.0",
    "jest": "^30.2.0",
    "png2icons": "^2.0.1",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0",
    "vite": "^6.0.0"
  },
  "dependencies": {
    "applescript": "^1.0.0",
    "chokidar": "^3.5.3",
    "dotenv": "^17.2.3",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "flexsearch": "^0.8.212",
    "googleapis": "^144.0.0",
    "gray-matter": "^4.0.3",
    "ical.js": "^1.5.0",
    "lucide-react": "^0.562.0",
    "node-schedule": "^2.1.1",
    "openai": "^6.15.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-frontmatter": "^5.0.0",
    "remark-parse": "^11.0.0",
    "remark-wiki-link": "^2.0.1",
    "string-comparison": "^1.3.0",
    "unified": "^11.0.5"
  },
  "build": {
    "appId": "com.prep.meeting-assistant",
    "productName": "Prep",
    "directories": {
      "output": "out"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      "resources/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
